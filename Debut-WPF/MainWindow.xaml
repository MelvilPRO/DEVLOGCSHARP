<Window x:Class="Debut_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Debut_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,0,209">
        <TextBlock x:Name="Leaderboard" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Leaderboard" VerticalAlignment="Top" Height="40" Width="170" FontSize="30"/>
        <TextBlock x:Name="DisplayedScores" HorizontalAlignment="Left" Margin="10,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="160" Width="170"/>
        <TextBox x:Name="UserEntry" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="40" Margin="0,68,0,0"/>
        <Button x:Name="UserAction" Content="Juste prix! (0-100)" HorizontalAlignment="Center" Margin="0,113,0,0" VerticalAlignment="Top" Height="40" Width="120" Click="UserAction_Click"/>

    </Grid>
</Window>
